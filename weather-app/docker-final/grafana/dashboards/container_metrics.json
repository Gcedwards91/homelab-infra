{
  "id": null,
  "uid": "container-metrics-statporter",
  "overwrite": true,
  "title": "Docker Container Metrics (Statporter)",
  "tags": ["prometheus", "containers", "statporter", "homelab"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 2,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Container CPU Usage (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "container_cpu_percent{name=~\"$container\"}",
          "refId": "A",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage (bytes)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"$container\"}",
          "refId": "A",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Network RX (bytes/s)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (name) (rate(container_network_receive_bytes_total{name=~\"$container\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    },
    {
      "type": "timeseries",
      "title": "Network TX (bytes/s)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (name) (rate(container_network_transmit_bytes_total{name=~\"$container\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "container_memory_percent{name=~\"$container\"}",
          "refId": "A",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "container",
        "type": "query",
        "label": "Container",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(container_cpu_percent, name)",
        "includeAll": true,
        "allValue": ".*",
        "refresh": 2,
        "hide": 0
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "annotations": { "list": [] }
}
